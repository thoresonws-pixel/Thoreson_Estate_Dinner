<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Characters ‚Äî The Thoreson Estate</title>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,700;1,400&family=Cormorant+Garamond:ital,wght@0,400;0,600;1,400&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: 'Cormorant Garamond', Georgia, serif;
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
            min-height: 100vh;
            color: #e8e8e8;
            padding: 20px;
        }
        
        /* Header */
        .header {
            text-align: center;
            padding: 40px 20px;
        }
        .header h1 {
            font-family: 'Playfair Display', Georgia, serif;
            font-size: 42px;
            color: #c9a227;
            letter-spacing: 4px;
            text-transform: uppercase;
            margin-bottom: 10px;
        }
        .header p {
            font-size: 18px;
            color: #8b7355;
            font-style: italic;
            letter-spacing: 2px;
        }
        .back-link {
            display: inline-block;
            margin-top: 20px;
            color: #c9a227;
            text-decoration: none;
            font-size: 16px;
            letter-spacing: 2px;
            transition: color 0.3s;
        }
        .back-link:hover {
            color: #fff;
        }
        
        /* Code Entry Section */
        .code-entry {
            max-width: 500px;
            margin: 0 auto 50px;
            background: linear-gradient(145deg, #f5f0e6 0%, #e8e0d0 50%, #d4c9b5 100%);
            border: 2px solid #8b7355;
            box-shadow: 0 0 0 1px #a08060, 0 0 0 4px #2a2520, 0 0 0 6px #8b7355;
            padding: 30px;
            text-align: center;
        }
        .code-entry h2 {
            font-family: 'Playfair Display', Georgia, serif;
            font-size: 20px;
            color: #2a2520;
            letter-spacing: 2px;
            margin-bottom: 20px;
        }
        .code-input-group {
            display: flex;
            gap: 10px;
            justify-content: center;
        }
        .code-input {
            font-family: 'Cormorant Garamond', Georgia, serif;
            font-size: 20px;
            padding: 12px 15px;
            border: 1px solid #8b7355;
            background: rgba(255,255,255,0.7);
            color: #2a2520;
            text-align: center;
            text-transform: uppercase;
            letter-spacing: 3px;
            width: 200px;
            outline: none;
        }
        .code-input:focus {
            border-color: #c9a227;
            background: rgba(255,255,255,0.9);
        }
        .code-input::placeholder {
            color: #8b7355;
            text-transform: none;
            letter-spacing: 1px;
        }
        .code-button {
            font-family: 'Playfair Display', Georgia, serif;
            font-size: 14px;
            letter-spacing: 2px;
            text-transform: uppercase;
            padding: 12px 25px;
            background: #2a2520;
            color: #e8e0d0;
            border: 2px solid #8b7355;
            cursor: pointer;
            transition: all 0.3s;
        }
        .code-button:hover {
            background: #8b7355;
            color: #f5f0e6;
        }
        .code-message {
            margin-top: 15px;
            font-style: italic;
            color: #5a4a3a;
            font-size: 16px;
        }
        .code-message.error {
            color: #8b4a4a;
        }
        
        /* Character Grid */
        .character-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 25px;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        
        /* Character Card - Public View */
        .character-card {
            background: linear-gradient(145deg, #f5f0e6 0%, #e8e0d0 50%, #d4c9b5 100%);
            border: 2px solid #8b7355;
            box-shadow: 0 0 0 1px #a08060, 0 10px 30px rgba(0,0,0,0.3);
            padding: 25px;
            transition: transform 0.3s, box-shadow 0.3s;
        }
        .character-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0 0 1px #a08060, 0 15px 40px rgba(0,0,0,0.4);
        }
        .character-name {
            font-family: 'Playfair Display', Georgia, serif;
            font-size: 24px;
            color: #2a2520;
            margin-bottom: 10px;
        }
        .character-public-desc {
            font-size: 18px;
            color: #5a4a3a;
            font-style: italic;
            line-height: 1.6;
        }
        .character-locked {
            margin-top: 20px;
            padding-top: 15px;
            border-top: 1px solid rgba(139, 115, 85, 0.3);
            font-size: 14px;
            color: #8b7355;
            text-align: center;
            letter-spacing: 1px;
        }
        .lock-icon {
            font-size: 18px;
            margin-right: 5px;
        }
        
        /* Character Card - Unlocked View */
        .character-card.unlocked {
            grid-column: 1 / -1;
            max-width: 800px;
            margin: 0 auto;
            border-color: #c9a227;
            box-shadow: 0 0 0 1px #c9a227, 0 0 0 4px #2a2520, 0 0 0 6px #c9a227, 0 20px 50px rgba(0,0,0,0.4);
        }
        .character-card.unlocked .character-name {
            font-size: 32px;
            text-align: center;
            margin-bottom: 5px;
        }
        .character-card.unlocked .character-public-desc {
            text-align: center;
            margin-bottom: 25px;
        }
        
        .private-section {
            display: none;
        }
        .character-card.unlocked .private-section {
            display: block;
        }
        
        .section-header {
            font-family: 'Playfair Display', Georgia, serif;
            font-size: 16px;
            color: #8b7355;
            letter-spacing: 3px;
            text-transform: uppercase;
            margin: 25px 0 10px;
            padding-bottom: 5px;
            border-bottom: 1px solid rgba(139, 115, 85, 0.3);
        }
        .section-header:first-of-type {
            margin-top: 0;
        }
        
        .section-content {
            font-size: 17px;
            color: #3a3028;
            line-height: 1.7;
        }
        
        .section-list {
            list-style: none;
            padding: 0;
        }
        .section-list li {
            font-size: 17px;
            color: #3a3028;
            padding: 8px 0;
            padding-left: 25px;
            position: relative;
            line-height: 1.5;
        }
        .section-list li::before {
            content: '‚ú¶';
            position: absolute;
            left: 0;
            color: #c9a227;
            font-size: 12px;
        }
        
        .relationship-item {
            margin-bottom: 10px;
        }
        .relationship-name {
            font-weight: 600;
            color: #2a2520;
        }
        .relationship-desc {
            font-style: italic;
            color: #5a4a3a;
        }
        
        .skill-box {
            background: rgba(201, 162, 39, 0.15);
            border: 1px solid #c9a227;
            padding: 20px;
            margin-top: 25px;
        }
        .skill-name {
            font-family: 'Playfair Display', Georgia, serif;
            font-size: 20px;
            color: #2a2520;
            margin-bottom: 8px;
        }
        .skill-desc {
            font-size: 16px;
            color: #5a4a3a;
            font-style: italic;
            margin-bottom: 15px;
        }
        .skill-password {
            font-family: monospace;
            font-size: 18px;
            background: #2a2520;
            color: #c9a227;
            padding: 10px 20px;
            display: inline-block;
            letter-spacing: 3px;
        }
        .skill-password-label {
            font-size: 12px;
            color: #8b7355;
            letter-spacing: 2px;
            text-transform: uppercase;
            margin-bottom: 5px;
        }
        
        .secret-box {
            background: rgba(139, 75, 75, 0.1);
            border-left: 4px solid #8b4a4a;
            padding: 15px 20px;
            margin-top: 10px;
        }
        .secret-box .section-content {
            color: #5a3028;
        }
        
        .close-button {
            display: block;
            width: 100%;
            margin-top: 30px;
            font-family: 'Playfair Display', Georgia, serif;
            font-size: 14px;
            letter-spacing: 2px;
            text-transform: uppercase;
            padding: 15px 25px;
            background: #2a2520;
            color: #e8e0d0;
            border: 2px solid #8b7355;
            cursor: pointer;
            transition: all 0.3s;
        }
        .close-button:hover {
            background: #8b7355;
            color: #f5f0e6;
        }
        
        /* Hidden state */
        .hidden {
            display: none !important;
        }
        
        /* Responsive */
        @media (max-width: 600px) {
            .header h1 {
                font-size: 28px;
            }
            .code-input-group {
                flex-direction: column;
                align-items: center;
            }
            .code-input {
                width: 100%;
                max-width: 250px;
            }
            .character-grid {
                grid-template-columns: 1fr;
                padding: 10px;
            }
            .character-card.unlocked {
                padding: 20px;
            }
            .character-card.unlocked .character-name {
                font-size: 26px;
            }
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>The Guests</h1>
        <p>Those in attendance at the Thoreson Estate</p>
        <a href="../" class="back-link">‚Üê Return to Invitation</a>
    </div>
    
    <div class="code-entry">
        <h2>Enter Your Character Code</h2>
        <div class="code-input-group">
            <input type="text" id="codeInput" class="code-input" placeholder="XXXX-XXXX" maxlength="12">
            <button onclick="unlockCharacter()" class="code-button">Unlock</button>
        </div>
        <div id="codeMessage" class="code-message"></div>
    </div>
    
    <div class="character-grid" id="characterGrid">
        <!-- Characters will be loaded here by JavaScript -->
    </div>

    <script src="data.js"></script>
    <script>
        let unlockedCharacterId = null;
        
        // Render all characters
        function renderCharacters() {
            const grid = document.getElementById('characterGrid');
            grid.innerHTML = '';
            
            characters.forEach(char => {
                const isUnlocked = (unlockedCharacterId === char.id);
                const card = document.createElement('div');
                card.className = 'character-card' + (isUnlocked ? ' unlocked' : '');
                card.id = 'char-' + char.id;
                
                // Build goals list
                const goalsList = char.goals ? char.goals.map(g => `<li>${g}</li>`).join('') : '';
                
                // Build relationships list
                const relationshipsList = char.relationships ? char.relationships.map(r => 
                    `<li><span class="relationship-name">${r.name}</span> ‚Äî <span class="relationship-desc">${r.relation}</span></li>`
                ).join('') : '';
                
                // Build items list
                const itemsList = char.items ? char.items.map(i => `<li>${i}</li>`).join('') : '';
                
                card.innerHTML = `
                    <div class="character-name">${char.name}</div>
                    <div class="character-public-desc">${char.publicDesc}</div>
                    
                    ${!isUnlocked ? `
                        <div class="character-locked">
                            <span class="lock-icon">üîí</span> Enter code to view full details
                        </div>
                    ` : ''}
                    
                    <div class="private-section">
                        <div class="section-header">Backstory</div>
                        <div class="section-content">${char.backstory || ''}</div>
                        
                        <div class="section-header">Your Secret</div>
                        <div class="secret-box">
                            <div class="section-content">${char.secret || ''}</div>
                        </div>
                        
                        <div class="section-header">What You Know</div>
                        <div class="section-content">${char.knowledge || ''}</div>
                        
                        ${char.goals && char.goals.length > 0 ? `
                            <div class="section-header">Your Goals</div>
                            <ul class="section-list">${goalsList}</ul>
                        ` : ''}
                        
                        ${char.relationships && char.relationships.length > 0 ? `
                            <div class="section-header">Key Relationships</div>
                            <ul class="section-list">${relationshipsList}</ul>
                        ` : ''}
                        
                        ${char.skill && char.skill !== 'None' ? `
                            <div class="skill-box">
                                <div class="skill-name">Special Skill: ${char.skill}</div>
                                <div class="skill-desc">${char.skillDesc || ''}</div>
                                <div class="skill-password-label">Your QR Code Password</div>
                                <div class="skill-password">${char.skillPassword || ''}</div>
                            </div>
                        ` : ''}
                        
                        ${char.items && char.items.length > 0 ? `
                            <div class="section-header">Items On Your Person</div>
                            <ul class="section-list">${itemsList}</ul>
                        ` : ''}
                        
                        <button class="close-button" onclick="lockCharacter()">Close & Lock</button>
                    </div>
                `;
                
                grid.appendChild(card);
            });
            
            // If a character is unlocked, scroll to it
            if (unlockedCharacterId) {
                const unlockedCard = document.getElementById('char-' + unlockedCharacterId);
                if (unlockedCard) {
                    unlockedCard.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            }
        }
        
        // Unlock a character by code
        function unlockCharacter() {
            const input = document.getElementById('codeInput');
            const message = document.getElementById('codeMessage');
            const code = input.value.trim().toUpperCase();
            
            if (!code) {
                message.textContent = 'Please enter a code.';
                message.className = 'code-message error';
                return;
            }
            
            // Find character with matching code
            const character = characters.find(c => c.code.toUpperCase() === code);
            
            if (character) {
                unlockedCharacterId = character.id;
                message.textContent = `Welcome, ${character.name}.`;
                message.className = 'code-message';
                renderCharacters();
            } else {
                message.textContent = 'Invalid code. Please try again.';
                message.className = 'code-message error';
            }
        }
        
        // Lock the character (return to public view)
        function lockCharacter() {
            unlockedCharacterId = null;
            document.getElementById('codeInput').value = '';
            document.getElementById('codeMessage').textContent = '';
            renderCharacters();
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }
        
        // Allow Enter key to submit code
        document.getElementById('codeInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                unlockCharacter();
            }
        });
        
        // Initial render
        renderCharacters();
    </script>
</body>
</html>
